@model IEnumerable<RentCars.Models.CustomerModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index of customers</h2>

<p>
    @Html.ActionLink("Create New Customer", "Create")
</p>

<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">No Record's found.</td>
            </tr>
        }
        else
        {
            <thead>
                <tr class="danger">
                    <th data-defaultsign="AZ">Name</th>
                    <th data-defaultsign="AZ">Surname</th>
                    <th data-defaultsign="AZ">Street</th>
                    <th data-defaultsign="AZ">City</th>
                    <th data-defaultsign="AZ">PostCode</th>
                    <th data-defaultsign="AZ">Country</th>
                    <th data-defaultsort="disabled"></th>
                </tr>
            </thead>
            foreach (var item in Model)
            {
            <tr>
                <td>@item.CustomerName</td>
                <td>@item.CustomerSurname</td>
                <td>@item.Steet</td>
                <td>@item.City</td>
                <td>@item.PostCode</td>
                <td>@item.Coutry</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CustomerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId }) |                    
                    @Html.ActionLink("AddRental", "Create", "CarRentalModels", new { id = item.CustomerId }, null)
                </td>
            </tr>
            }
        }
    </table>
</div>
