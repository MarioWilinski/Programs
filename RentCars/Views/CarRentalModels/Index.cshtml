@model IEnumerable<RentCars.Models.CarRentalModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index of rentals</h2>


<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">No Record's found.</td>
            </tr>
        }
        else
        {
            <thead>
                <tr class="danger">
                    <th data-defaultsign="AZ">Name</th>
                    <th data-defaultsign="AZ">Surname</th>
                    <th data-defaultsign="AZ">Brand</th>
                    <th data-defaultsign="AZ">Model</th>
                    <th data-defaultsign="_19">Production year</th>
                    <th data-defaultsign="AZ">Colour</th>
                    <th data-defaultsign="_19">Rate</th>
                </tr>
            </thead>
            foreach (var item in Model)
            {
            <tr>
                <td>@item.Customers.CustomerName</td>
                <td>@item.Customers.CustomerSurname</td>
                <td>@item.Cars.Brand</td>
                <td>@item.Cars.Model</td>
                <td>@item.Cars.ProductionYear</td>
                <td>@item.Cars.Colour</td>
                <td>@item.CarRentalRate</td>
            </tr>
            }
        }
    </table>
</div>


